<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressImageView">
        <!--进度文字字号-->
        <attr name="piv_textSize" format="dimension" />
        <!--是否显示进度-->
        <attr name="piv_showProgress" format="boolean" />
        <!--当前进度-->
        <attr name="piv_progress" format="integer" />
        <!--进度蒙板颜色-->
        <attr name="piv_coverColor" format="color" />
        <!--进度文字颜色-->
        <attr name="piv_textColor" format="color" />
        <!--进度文字和进度扇形间距-->
        <attr name="piv_circlePadding" format="dimension" />
        <!--是否显示进度描边-->
        <attr name="piv_showProgressStroke" format="boolean" />
        <!--进度描边颜色-->
        <attr name="piv_progressStrokeColor" format="color" />
        <!--进度描边宽度-->
        <attr name="piv_progressStrokeWidth" format="dimension" />
        <!--是否是圆形图像-->
        <attr name="piv_isCircle" format="boolean" />
        <!--圆角-->
        <attr name="piv_radius" format="dimension" />
    </declare-styleable>
</resources>